{
  "name": "demo-chat-app",
  "version": "1.0.0",
  "scripts": {
    "prettier-format": "cd src/ && prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "cd src/ && eslint . --ext .ts",
    "prepare": "cd ../ && husky install src/.husky "
  },
  "husky": {
    "hooks": {
      "pre-push": "git diff HEAD --quiet && npm run prettier-format && npm run lint"
    }
  },
  "description": "demo chat app",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "mongoose": "^6.3.3",
    "socket.io": "^4.5.0"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0"
  }
}
